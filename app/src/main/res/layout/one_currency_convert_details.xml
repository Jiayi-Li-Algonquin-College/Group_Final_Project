<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/fromCurrencyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:text="FromCurrencyGoesHere"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/toCurrencyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="ToCurrencyGoesHere"
        app:layout_constraintStart_toStartOf="@+id/fromCurrencyText"
        app:layout_constraintTop_toBottomOf="@+id/fromCurrencyText" />

    <TextView
        android:id="@+id/fromAmountText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="FromAmountGoesHere"
        app:layout_constraintStart_toStartOf="@+id/toCurrencyText"
        app:layout_constraintTop_toBottomOf="@+id/toCurrencyText" />

    <TextView
        android:id="@+id/toAmountText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="ToAmountGoesHere"
        app:layout_constraintStart_toStartOf="@+id/fromAmountText"
        app:layout_constraintTop_toBottomOf="@+id/fromAmountText" />

    <TextView
        android:id="@+id/databaseID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Database id goes here"
        app:layout_constraintStart_toStartOf="@+id/toAmountText"
        app:layout_constraintTop_toBottomOf="@+id/toAmountText" />

</androidx.constraintlayout.widget.ConstraintLayout>